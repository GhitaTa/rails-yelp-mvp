<h1> All restaurants </h1>
<% @restaurants.each do |restaurant| %>
  <ul>
    <li> <h2> <%= restaurant.name %> </h2>
        <p><strong>Location:</strong><%= restaurant.address %> </p>
        <p><strong> Phone: </strong><%= restaurant.phone_number %></p>
        <p><strong> Category: </strong> <%= restaurant.category %></p>
        <p><strong> Last review:</strong><%= restaurant.reviews.first.rating if restaurant.reviews.first %></p>
        <p><%= link_to 'Show', restaurant %></p>
        <p> <%= link_to 'Review', new_restaurant_review_path(restaurant) %></p>
    </li>
  </ul>
<% end %>
<%= link_to "Add Restaurant", new_restaurant_path %>
